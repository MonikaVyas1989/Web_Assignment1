@model  CityViewModel
@{
     ViewData["Title"]="City" ;
   }

<h1>City</h1>

<div class="accordion-item">
    <form class="align-content-center" asp-action="CreateCity" method="post">
        <div>
            <label asp-for="Id">Enter City Id:</label>
            <input asp-for="Id" />
            <span style="color:red" asp-validation-for="Id"></span><br /><br />
            <label asp-for="Name">Enter Name:</label>
            <input asp-for="Name" />
            <span style="color:red" asp-validation-for="Name"></span> <br /><br />
            <label asp-for="CountryId">Enter Phone:</label>
            <input asp-for="CountryId" />
            <span style="color:red" asp-validation-for="CountryId"></span><br /><br />

        </div>
        <div>
            <input class="btn-close-white" type="submit" value="Create City" />
        </div>


    </form>
</div><br />
<div class="accordion-item">
    <table border="1" class="table">
        <thead>
            <tr>
                
                <th>Id</th>
                <th>Name</th>
                <th>CountryId</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var people in Model.CityList)
            {
                <tr>
                   
                    <td>@people.Id</td>
                    <td>@people.Name</td>
                    <td>@people.CountryId</td>
                    




                </tr>
            }
        </tbody>
    </table>
</div>
<div class="accordion-item"><a asp-controller="People" asp-action="PeopleView">Back</a></div>