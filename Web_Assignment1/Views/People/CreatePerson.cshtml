@model Web_Assignment1.Models.PersonModel;
@{
    ViewData["Title"] = "CreatePerson";
}

<h1>CreatePerson</h1>

<div class="accordion-item">
    <form class="align-content-center" asp-action="CreatePerson">
        <div>
            <label asp-for="Name">Enter Name:</label>
            <input asp-for="Name" />
            <span style="color:red" asp-validation-for="Name"></span> <br /><br />
            <label asp-for="Phone">Enter Phone:</label>
            <input asp-for="Phone" />
            <span style="color:red" asp-validation-for="Phone"></span><br /><br />
            <label asp-for="CityId">Enter City Id:</label>
            <input asp-for="CityId" />
            <span style="color:red" asp-validation-for="CityId"></span><br /><br />
        </div>
        <div>
            <input class="btn-close-white" type="submit" value="Create Person" />
        </div>
      

    </form>
</div>
<br />
<div class="accordion-button"><a asp-action="PeopleView">Back</a></div>
